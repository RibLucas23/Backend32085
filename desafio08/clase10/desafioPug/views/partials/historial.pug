        div
            h2( style="color:crimson;") Historial

            if DB_PERSONAS.length > 0
                div( class="table-responsive")
                    table( class="table table-dark")
                        tr( style="color: yellow;")
                            th Nombre
                            th Apellido
                            th Edad
                        each persona in DB_PERSONAS    
                            tr
                                td=persona.nombre
                                td=persona.apellido
